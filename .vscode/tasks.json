{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Go Binary",
      "type": "shell",
      "command": "go",
      "args": ["build", "-o", "City2TABULA", "./cmd"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$go"],
      "detail": "Compiles the Go program into an executable binary."
    },
    {
      "label": "Create Complete Database",
      "type": "shell",
      "command": "go build -o City2TABULA ./cmd && ./City2TABULA --create_db",
      "group": "test",
      "dependsOn": "Build Go Binary",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Creates the complete City2TABULA database (CityDB infrastructure + schemas + data import)."
    },
    {
      "label": "Reset Complete Database",
      "type": "shell",
      "command": "go build -o City2TABULA ./cmd && ./City2TABULA --reset_all",
      "group": "test",
      "dependsOn": "Build Go Binary",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Reset everything: drop all schemas and recreate the complete database."
    },
    {
      "label": "Reset CityDB Only",
      "type": "shell",
      "command": "go build -o City2TABULA ./cmd && ./City2TABULA --reset_citydb",
      "group": "test",
      "dependsOn": "Build Go Binary",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Reset only CityDB infrastructure (drop CityDB schemas, recreate them, and re-import CityDB data)."
    },
    {
      "label": "Reset City2TABULA Schemas Only",
      "type": "shell",
      "command": "go build -o City2TABULA ./cmd && ./City2TABULA --reset_city2tabula",
      "group": "test",
      "dependsOn": "Build Go Binary",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Reset only City2TABULA schemas (preserve CityDB infrastructure)."
    },
    {
      "label": "Extract Features",
      "type": "shell",
      "command": "go build -o City2TABULA ./cmd && ./City2TABULA --extract_features",
      "group": "test",
      "dependsOn": "Build Go Binary",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Run the feature extraction pipeline."
    },
    {
      "label": "Legacy: Reset City2TABULA DB",
      "type": "shell",
      "command": "go build -o City2TABULA ./cmd && ./City2TABULA --reset_db",
      "group": "test",
      "dependsOn": "Build Go Binary",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Legacy command: same as 'Reset Complete Database'."
    },
    {
      "label": "Run rtd server",
      "type": "shell",
      "command": "cd ${workspaceFolder}/docs && sphinx-autobuild source build/html",
      "problemMatcher": [],
      "group": {
          "kind": "build",
          "isDefault": true
      },
      "detail": "Start the Read the Docs development server with auto-rebuild."
    }
  ]
}
